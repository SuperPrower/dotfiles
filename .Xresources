! ===================
! urxvt configuration
! ===================

URxvt*scrollBar:	false


URxvt*letterSpace: 	0

URxvt*font:		xft:xos4 Terminus:size=12, \
			xft:xos4 Terminess Powerline:size=12, \
			xft:Unifont:size=12

URxvt*boldFont:		xtf:xos4 Terminus:size=12:weight=bold, \
			xft:xos4 Terminess Powerline:size=12:weight=bold

URxvt.iso14755:		false
URxvt*utf8:		true

! =================
! Xft configuration
! =================

Xft.antialias:     	true
Xft.rgba:		subpixel
Xft.hinting:       	false
Xft.hintstyle:		hintslight
Xft.lcdfilter:		lcddefault

! ============
! color scheme
! ============
! Base16 Tomorrow Night
! Scheme: Chris Kempson (http://chriskempson.com)

#define base00 #1d1f21
#define base01 #282a2e
#define base02 #373b41
#define base03 #969896
#define base04 #b4b7b4
#define base05 #c5c8c6
#define base06 #e0e0e0
#define base07 #ffffff
#define base08 #cc6666
#define base09 #de935f
#define base0A #f0c674
#define base0B #b5bd68
#define base0C #8abeb7
#define base0D #81a2be
#define base0E #b294bb
#define base0F #a3685a

*foreground:   base05
#ifdef background_opacity
*background:   [background_opacity]base00
#else
*background:   base00
#endif
*cursorColor:  base05

*color0:       base00
*color1:       base08
*color2:       base0B
*color3:       base0A
*color4:       base0D
*color5:       base0E
*color6:       base0C
*color7:       base05

*color8:       base03
*color9:       base09
*color10:      base01
*color11:      base02
*color12:      base04
*color13:      base06
*color14:      base0F
*color15:      base07

#define m_focus_color #406B50
focus-color: m_focus_color


! =================
! rofi color scheme
! =================

#define hl_text #1B2B34
#define m_color m_focus_color

rofi.color-enabled:	true
rofi.separator-style: 	solid
! State:           	'bg',		'fg',	'bgalt',	'hlbg', 'hlfg'
rofi.color-normal:	argb:00000000, #D8DEE9, argb:00000000, m_color, hl_text
rofi.color-urgent:	argb:00000000, #F99157, argb:00000000, #F99157, hl_text
rofi.color-active:	argb:00000000, #6699CC, argb:00000000, #6699CC, hl_text
rofi.color-window:	base00, m_color, m_color
rofi.font:		"DejaVu Sans Mono" Book 14
