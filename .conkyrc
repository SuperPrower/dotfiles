conky.config = {
	alignment = 'middle_right',
	gap_x = 0,
	gap_y = 0,
	background = false,
	cpu_avg_samples = 2,
	default_color = 'white',
	default_outline_color = 'white',
	default_shade_color = 'white',

	draw_borders = true,
	border_width = 0,
	border_inner_margin = 16,
	border_outer_margin = 0,

	draw_graph_borders = true,
	draw_outline = false,
	draw_shades = false,

	use_xft = true,
	-- font = 'DejaVu Sans Mono:size=12',
	font = 'xos4 Terminus:size=12:style=bold',
	minimum_height = 1080,
	minimum_width = 300,
	net_avg_samples = 2,
	no_buffers = true,
	out_to_console = false,
	out_to_stderr = false,
	extra_newline = false,

	double_buffer = true,
	own_window = true,
	own_window_class = 'conky',
	own_window_type = 'override',

	own_window_argb_visual = true,
	own_window_argb_value = 96,

	-- For KDE
	-- own_window_type = 'normal',
	-- own_window_hints = 'undecorated, below, sticky, skip_pager, skip_taskbar',

	stippled_borders = 0,
	update_interval = 1.0,
	uppercase = false,
	use_spacer = 'none',
	show_graph_scale = false,
	show_graph_range = false,

	text_buffer_size = 8192,

	--[[ run and stop cover art script in background
	     this script extracts album art from current song
	     and converts it to text art made out of braille font
	--]]
	lua_load = '~/scripts/conky_cover_art.lua',
	lua_startup_hook = 'start_art_script',
	lua_shutdown_hook = 'stop_art_script',


	-- colors
	color1 = "lightgray",

}

conky.text = [[
${color1}Uptime:$color $uptime_short
# Memory Usage
${color1}RAM:$color $mem/$memmax
	${color1}└ Swap: $swap$color
# CPU load
${color1}CPU Usage:$color $cpu%
	${color1}├ CPU1: $color${cpubar cpu1 4,50}
	${color1}├ CPU2: $color${cpubar cpu2 4,50}
	${color1}├ CPU3: $color${cpubar cpu3 4,50}
	${color1}├ CPU4: $color${cpubar cpu4 4,50}
	${color1}└ Temp: $color${platform coretemp.0/hwmon/hwmon3 temp 1}°C
${color1}Processes:$color $processes  ${color1}Running:$color $running_processes
$hr
${color1}HDD${color}
	${color1}├ Temp: ${color}${hddtemp}°C
	${color1}└ I/O: ${color}${diskio}
$hr
# Networking
${if_up wlp1s0}\
${font FontAwesome} ${font}${scroll 32 $wireless_essid}\
	${goto 150}↓ ${downspeed wlp1s0}\
	${goto 225}↑ ${upspeed wlp1s0}\
$endif
${font FontAwesome} ${font}${scroll 32 ${addr enp2s0}}\
	${goto 150}↓ ${downspeed enp2s0}\
	${goto 225}↑ ${upspeed enp2s0}
$hr
# MPD
${if_mpd_playing}
# Show album art
${execp cat /tmp/cover.braille}$color
$alignc${scroll 32 $mpd_title}
$alignc${scroll 32 $mpd_artist}
$alignc${scroll 32 $mpd_album}
$alignc${mpd_bar 8,150}
${alignc}${mpd_elapsed} / ${mpd_length}
$endif
$hr
${execpi 3600 ~/scripts/wttr.sh T0n 2}
]]

-- ${color1}└ ${color}${diskiograph}
